@{
    ViewData["Title"] = "Books";
}

@section DataTableFilesStyles {
    <link href="~/assets/datatables/datatables.bundle.css" rel="stylesheet" />
}

<div class="alert alert-dismissible bg-light-info border border-info border-3 border-dashed d-flex justify-content-between w-100 p-5 mb-10">
    <div class="symbol-label fs-2 fw-semibold ">
        <h3 class="card-title">
            <div class="symbol symbol-40px me-3">
                <div class="symbol-label fs-2 fw-semibold ">
                    <span class="svg-icon svg-icon-primary">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path opacity="0.3" d="M21.25 18.525L13.05 21.825C12.35 22.125 11.65 22.125 10.95 21.825L2.75 18.525C1.75 18.125 1.75 16.725 2.75 16.325L4.04999 15.825L10.25 18.325C10.85 18.525 11.45 18.625 12.05 18.625C12.65 18.625 13.25 18.525 13.85 18.325L20.05 15.825L21.35 16.325C22.35 16.725 22.35 18.125 21.25 18.525ZM13.05 16.425L21.25 13.125C22.25 12.725 22.25 11.325 21.25 10.925L13.05 7.62502C12.35 7.32502 11.65 7.32502 10.95 7.62502L2.75 10.925C1.75 11.325 1.75 12.725 2.75 13.125L10.95 16.425C11.65 16.725 12.45 16.725 13.05 16.425Z" fill="currentColor" />
                            <path d="M11.05 11.025L2.84998 7.725C1.84998 7.325 1.84998 5.925 2.84998 5.525L11.05 2.225C11.75 1.925 12.45 1.925 13.15 2.225L21.35 5.525C22.35 5.925 22.35 7.325 21.35 7.725L13.05 11.025C12.45 11.325 11.65 11.325 11.05 11.025Z" fill="currentColor" />
                        </svg>
                    </span>
                </div>
            </div>
            Books
        </h3>
    </div>
    <!--end::Content-->
    <!--begin::Close-->
    <div class="card-toolbar">
        <a asp-action="Create" class="btn btn-sm btn-primary">
            <span class="svg-icon svg-icon-muted">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect opacity="0.3" x="2" y="2" width="20" height="20" rx="10" fill="currentColor" />
                    <rect x="10.8891" y="17.8033" width="12" height="2" rx="1" transform="rotate(-90 10.8891 17.8033)" fill="currentColor" />
                    <rect x="6.01041" y="10.9247" width="12" height="2" rx="1" fill="currentColor" />
                </svg>
            </span>
            Add
        </a>
    </div>
    <!--end::Close-->
</div>
<div class="card shadow-sm">
    <div class="card-header">
        <div class="d-flex align-items-center position-relative my-1">
            <i class="ki-duotone ki-magnifier fs-1 position-absolute ms-4">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
                    <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
                </svg>
            </i>
            <input id="searchDataTable" type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Search by title or author...">
        </div>
    </div>
    <div class="card-body pt-0">
        <div class="table-responsive">
            <table id="Books" class="table table-row-dashed table-row-gray-300 align-middle gy-4">
                <thead>
                    <tr class="fw-bold fs-6 text-gray-800">
                        <th class="d-none"></th>
                        <th>Book</th>
                        <th>Publisher</th>
                        <th>Publishing Date</th>
                        <th>Hall</th>
                        <th>Categories</th>
                        <th>Rental</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section DataTableFilesJS {
    <script src="~/assets/datatables/datatables.bundle.js"></script>
}

@section Scripts {
    <script src="~/js/books.js"></script>
}
