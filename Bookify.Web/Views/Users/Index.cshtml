@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

@section DataTableFilesStyles {
    <link href="~/assets/datatables/datatables.bundle.css" rel="stylesheet" />
}

<div class="alert alert-dismissible bg-light-info border border-info border-3 border-dashed d-flex justify-content-between w-100 p-5 mb-10">
    <div class="symbol-label fs-2 fw-semibold ">
        <h3 class="card-title">
            <div class="symbol symbol-40px me-3">
                <div class="symbol-label fs-2 fw-semibold ">
                    <span class="svg-icon svg-icon-primary">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16.0173 9H15.3945C14.2833 9 13.263 9.61425 12.7431 10.5963L12.154 11.7091C12.0645 11.8781 12.1072 12.0868 12.2559 12.2071L12.6402 12.5183C13.2631 13.0225 13.7556 13.6691 14.0764 14.4035L14.2321 14.7601C14.2957 14.9058 14.4396 15 14.5987 15H18.6747C19.7297 15 20.4057 13.8774 19.912 12.945L18.6686 10.5963C18.1487 9.61425 17.1285 9 16.0173 9Z" fill="currentColor" />
                            <rect opacity="0.3" x="14" y="4" width="4" height="4" rx="2" fill="currentColor" />
                            <path d="M4.65486 14.8559C5.40389 13.1224 7.11161 12 9 12C10.8884 12 12.5961 13.1224 13.3451 14.8559L14.793 18.2067C15.3636 19.5271 14.3955 21 12.9571 21H5.04292C3.60453 21 2.63644 19.5271 3.20698 18.2067L4.65486 14.8559Z" fill="currentColor" />
                            <rect opacity="0.3" x="6" y="5" width="6" height="6" rx="3" fill="currentColor" />
                        </svg>
                    </span>
                </div>
            </div>
            Users
        </h3>
    </div>
    <!--end::Content-->
    <!--begin::Close-->
    <div class="card-toolbar">
        <a href="javascript:;" class="btn btn-sm btn-primary js-render-modal"
           data-title="Add User" data-url="Users/Create">
            <span class="svg-icon svg-icon-muted">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect opacity="0.3" x="2" y="2" width="20" height="20" rx="10" fill="currentColor" />
                    <rect x="10.8891" y="17.8033" width="12" height="2" rx="1" transform="rotate(-90 10.8891 17.8033)" fill="currentColor" />
                    <rect x="6.01041" y="10.9247" width="12" height="2" rx="1" fill="currentColor" />
                </svg>
            </span>
            Add
        </a>
    </div>
    <!--end::Close-->
</div>
<div class="card shadow-sm">
    <partial name="_DataTableCartHeader" />
    <div class="card-body pt-0">
        <div class="table-responsive">
            <table id="kt_datatable_example" class="table table-row-dashed table-row-gray-300 align-middle gy-4 js-datatable " data-document-title="Categorise">
                <thead>
                    <tr class="fw-bold fs-6 text-gray-800">
                        <th>Full Name</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Created On</th>
                        <th>Last Updated on</th>
                        <th class="js-exclude-export">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <partial name="_UserRow" model="@user" />
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




@Html.AntiForgeryToken()
@section DataTableFilesJS {
    <script src="~/assets/datatables/datatables.bundle.js"></script>
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
