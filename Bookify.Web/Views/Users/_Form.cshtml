@model UserFormViewModel


<form asp-action="@(!string.IsNullOrEmpty(Model?.Id) ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="OnModalBegin"
      data-ajax-success="OnModalSucess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="OnModalComplete">


    @if (!string.IsNullOrEmpty(Model?.Id))
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control form-control-solid" placeholder="Full Name" autocomplete="off" asp-for="FullName" />
            <label asp-for="FullName"></label>
        </div>
        <span asp-validation-for="FullName" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control form-control-solid" placeholder="User Name" autocomplete="off" asp-for="UserName" />
            <label asp-for="UserName"></label>
        </div>
        <span asp-validation-for="UserName" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="email" class="form-control form-control-solid" placeholder="Email" autocomplete="off" asp-for="Email" />
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating">
            <select multiple class="form-select form-select-solid h-100 js-select" size="4" asp-for="SelectedRoles" asp-items="@Model?.Roles" data-placeholder="select Roles">
            </select>
            <label asp-for="SelectedRoles"></label>
            <span for="SelectedRoles" class="text-danger d-block"></span>
            <span asp-validation-for="SelectedRoles" class="text-danger d-block"></span>
        </div>
    </div>
    @if (string.IsNullOrEmpty(Model!.Id))
    {
        <div class="mb-5">
            <div class="form-floating mb-2">
                <input type="password" class="form-control form-control-solid" placeholder="Password" asp-for="Password" />
                <label asp-for="Password"></label>
            </div>
            <span asp-validation-for="Password" class="text-danger d-block"></span>
        </div>
        <div class="mb-5">
            <div class="form-floating mb-2">
                <input type="text" class="form-control form-control-solid" placeholder="Confirm Password" asp-for="ConfirmPassword" />
                <label asp-for="ConfirmPassword"></label>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
        </div>
    }
    
    <partial name="_ModalFooter" />

</form>