@model SearchViewModel

<form asp-action="GetCopyDetials"
    data-ajax-method="post"  
    data-ajax="true"
    data-ajax-success="OnAddCopySuccess"
      data-ajax-begin="DisableBtnWhenProcessing"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="OnModalComplete" id="SerchForm">
    <div class="d-flex align-items-center">
        <!--begin::Input group-->
        <div class="position-relative w-md-400px me-md-2">
            <i class="ki-duotone ki-magnifier fs-3 text-gray-500 position-absolute top-50 translate-middle ms-6"><span class="path1"></span><span class="path2"></span></i>
            <input type="text" class="form-control form-control-solid ps-10" asp-for="Value" placeholder="Search by serial number ... ">
        </div>
        <!--end::Input group-->
        <!--begin:Action-->
        <div class="d-flex align-items-center">
            <button type="submit" class="btn btn-primary me-5 js-search">Search</button>
        </div>
        <!--end:Action-->
    </div>
</form>

